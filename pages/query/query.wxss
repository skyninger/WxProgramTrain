.input-box{
  margin: 0 0 20rpx;
  padding: 0 30rpx;
  display: flex;
}
.input-box .input{
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border: 1px solid #eeeeee;
  font-size: 30rpx;
  box-sizing: border-box;
  flex: 1;
  text-align: center;
}
.input-box .sign{
  margin: 0 20rpx;
  line-height: 80rpx;
  color: #999999;
}
.input-box .btn-query{
  margin: 0 0 0 20rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background-color: #1b84e6;
  color: #ffffff;
  border-radius: 8rpx;
}
.grid-wrap{
  margin: 40rpx 30rpx;
  text-align: center;
  font-size: 32rpx;
}
.grid-wrap .table{
  display: table;
  width: 100%;
}
.grid-wrap .title{
  display: table-cell;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}
.grid-wrap .value{
  display: table-cell;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}
.grid-wrap .grid{
  width: 100%;
  display: table-row;
}